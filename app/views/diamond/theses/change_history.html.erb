<div class="row">
  <div class="col-md-1">
    <div class="label-wrapper">
      <%= thesis_type_label(@thesis) %>
    </div>
  </div>
  <div class="col-md-15">
    <h4>
      <%= @thesis.title %>
    </h4>
  </div>
</div>
<div>
  <hr class="no-margin">
</div>
<div class="extra-margin"></div>

<table class="table">
  <thead>
    <tr>
      <th colspan="3">
        <%=t :label_audits %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @thesis.thesis_state_audits.each do |tsa| %>
      <tr>
        <td>
          <%= tsa.creator.try(:full_name) || "-" %>
        </td>
        <td>
          <%=l tsa.created_at %>
        </td>
        <td>
          <%=t "label_status_#{tsa.state}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>